<h2><%= @user.name %></h2>

<form method="post" action="/users/<%= @user.id %>">
  <input type="hidden" name="_method" value="patch">
  <h3> Enter your current password to make any changes </h3>
  <h3><label for="password">Current Password:</label><input type="password" name="password"></h3><br>
  <label for="[user]name">Name:</label><input type="string" name="[user]name" value="<%= @user.name %>"><br>
  <label for="[user]email">Email:</label><input type="string" name="[user]email" value="<%= @user.email %>"><br>
  <label for="[user]assistant_email">Assistant's Email:</label><input type="string" name="[user]assistant_email" value="<%= @user.assistant_email %>"><br>
  <label for="new_password"> New Password:</label><input type="password" name="new_password"><br><br>
  <input type="submit" value="Update User">
</form>
  

